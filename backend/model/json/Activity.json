{
  "title": "Activity",
  "type": "object",
  "required": ["type", "channelId", "content", "actorId"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string"
    },
    "type": {
      "enum": [
        "Message",
        "Event"
      ]
    },
    "channelId": {
      "type": "string"
    },
    "content": {
      "type": "object",
      "oneOf": [
        { "$ref": "#/contentTypes/Message" },
        { "$ref": "#/contentTypes/Event" }
      ]
    },
    "title": {
      "type": "string"
    },
    "titleUrl": {
      "type": "string",
      "format": "uri"
    },
    "created": {
      "type": "string",
      "format": "date-time"
    },
    "published": {
      "type": "string",
      "format": "date-time"
    },
    "actorId": {
      "type": "string"
    },
    "hash": {
      "type": "string"
    }
  },
  "contentTypes": {
    "Message": {
      "properties": {
        "message": {
          "type": "string"
        }
      },
      "required": ["message"],
      "additionalProperties": false
    },
    "Event": {
      "properties": {
        "location": {
          "type": "string"
        },
        "start": {
          "type": "string",
          "format": "date-time"
        },
        "end": {
          "type": "string",
          "format": "date-time"
        },
        "categories": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        },
        "organizer": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": ["start"],
      "additionalProperties": false
    }
  }
}
