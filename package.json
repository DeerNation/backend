{
  "name": "socketcluster-sample",
  "description": "A sample SocketCluster app",
  "version": "1.0.0",
  "contributors": [
    {
      "name": "Jonathan Gros-Dubois",
      "email": "grosjona@yahoo.com.au"
    }
  ],
  "dependencies": {
    "ajv": "^6.4.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "connect": "^3.6.6",
    "debug": "^3.1.0",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "glob": "^7.1.2",
    "got": "^8.3.0",
    "graphql": "^0.13.2",
    "graphql-thinky": "^0.4.0-rc-3",
    "i18n": "^0.8.3",
    "ical": "^0.5.0",
    "metascraper": "^3.10.4",
    "minimist": "^1.2.0",
    "moment": "^2.21.0",
    "morgan": "^1.9.0",
    "node-babel": "^0.1.2",
    "node-cron": "^1.2.1",
    "node-gcm": "^0.14.10",
    "node-ical": "^0.5.4",
    "request": "^2.85.0",
    "request-promise": "^4.2.2",
    "sc-codec-min-bin": "^3.0.0",
    "sc-crud-rethink": "^6.0.2",
    "sc-errors": "^1.4.0",
    "sc-framework-health-check": "^2.0.0",
    "sc-hot-reboot": "^1.0.0",
    "scc-broker-client": "^3.0.0",
    "semver": "^5.5.0",
    "serve-static": "^1.13.2",
    "socketcluster": "^11.1.0",
    "socketcluster-client": "^11.0.0",
    "uuid": "^3.2.1",
    "wamp-socket-cluster": "^1.0.7",
    "winston": "^3.0.0-rc3",
    "xxhash": "^0.2.4"
  },
  "keywords": [
    "websocket",
    "server",
    "realtime",
    "cluster",
    "scalable"
  ],
  "readmeFilename": "README.md",
  "scripts": {
    "start": "ENV=production node server.js",
    "predev": "cd frontend/app && qx compile --watch &",
    "dev": "ENV=dev node server.js",
    "backend": "ENV=dev DATABASE_HOST=172.17.0.2 node --trace-warnings server.js",
    "frontend": "ENV=dev cd frontend/app && qx serve",
    "postdev": "killall -9 qx",
    "start:docker": "node dockerwait.js && node ${SOCKETCLUSTER_MASTER_CONTROLLER:-server.js}",
    "lint": "standard --verbose | snazzy",
    "compile-frontend-source": "cd frontend/app && qx compile && cd ../../",
    "compile-frontend-build": "cd frontend/app && qx compile --target=build && cd ../../",
    "compile-frontend-app": "cd frontend/app && CORDOVA=1 qx compile --target=build && cd ../../",
    "test": "ENV=dev DATABASE_HOST=172.17.0.2 nyc --reporter=html --reporter=text-summary mocha --recursive",
    "deploy-mobile": "npm run compile-frontend-app && cd app/ && cordova run android --device && cd ../"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "grunt": "^1.0.2",
    "grunt-banner": "^0.6.0",
    "mocha": "^5.0.5",
    "nyc": "^11.6.0",
    "sinon": "^4.4.10",
    "snazzy": "^7.1.1",
    "standard": "^11.0.1"
  },
  "standard": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true
    },
    "ignore": [
      "app/**",
      "frontend/qooxdoo/**",
      "gen/**",
      "node_modules/**",
      "frontend/app/build-output/**",
      "frontend/app/source-output/**",
      "frontend/app/contrib/**",
      "frontend/app/source/resource/js/**"
    ],
    "globals": [
      "app",
      "qx",
      "dialog",
      "socketCluster",
      "wampSocketCluster",
      "showdown",
      "firebase",
      "PushNotification",
      "scCodecMinBin",
      "$"
    ]
  }
}
