{
  "name": "socketcluster-sample",
  "description": "A sample SocketCluster app",
  "version": "1.0.0",
  "contributors": [
    {
      "name": "Jonathan Gros-Dubois",
      "email": "grosjona@yahoo.com.au"
    }
  ],
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "connect": "^3.6.6",
    "debug": "^3.1.0",
    "express": "^4.16.2",
    "i18n": "^0.8.3",
    "ical": "^0.5.0",
    "minimist": "^1.2.0",
    "morgan": "^1.9.0",
    "node-cron": "^1.2.1",
    "node-gcm": "^0.14.10",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "sc-crud-rethink": "^6.0.2",
    "sc-errors": "^1.4.0",
    "sc-framework-health-check": "^2.0.0",
    "sc-hot-reboot": "^1.0.0",
    "scc-broker-client": "^2.1.2",
    "serve-static": "^1.13.2",
    "socketcluster": "^10.0.0",
    "socketcluster-client": "^10.0.0",
    "uuid": "^3.2.1",
    "wamp-socket-cluster": "^1.0.7",
    "winston": "^3.0.0-rc1",
    "xxhash": "^0.2.4"
  },
  "keywords": [
    "websocket",
    "server",
    "realtime",
    "cluster",
    "scalable"
  ],
  "readmeFilename": "README.md",
  "scripts": {
    "start": "ENV=production node server.js",
    "predev": "cd frontend/app && qx compile --watch &",
    "dev": "DATABASE_HOST=172.17.0.2 ENV=dev node server.js",
    "backend": "ENV=dev DATABASE_HOST=172.17.0.2 node server.js",
    "frontend": "ENV=dev cd frontend/app && qx serve --locale=de",
    "postdev": "killall -9 qx",
    "start:docker": "node dockerwait.js && node ${SOCKETCLUSTER_MASTER_CONTROLLER:-server.js}",
    "test": "standard --verbose | snazzy",
    "compile-frontend": "cd frontend/app && qx compile && cd ../../"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "snazzy": "^7.0.0",
    "standard": "^11.0.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true
    },
    "ignore": [
      "app/**",
      "frontend/qooxdoo/**",
      "gen/**",
      "node_modules/**",
      "frontend/app/build-output/**",
      "frontend/app/source-output/**",
      "frontend/app/contrib/**",
      "frontend/app/source/resource/js/**"
    ],
    "globals": [
      "app",
      "qx",
      "dialog",
      "socketCluster",
      "wampSocketCluster",
      "showdown",
      "firebase",
      "PushNotification"
    ]
  }
}
